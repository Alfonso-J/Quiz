<form action="/quizes" method="get">
  <p>Buscar pregunta: </p>
  <input type="text" name="search">
  <input type="submit" value="Enviar">
</form>

<table>
  <% var i; for (i=0; i < quizes.length; i++) { %>
    <tr>
      <td>
        <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>

      </td>
      <td>
        <a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a>
      </td>
      <td>
        <form  action="quizes/<%= quizes[i].id %>?_method=delete" method="post">
            <button type="submit" onClik="return confirm('Borrar: <%= quizes[i].pregunta %>');">Borrar</button>
        </form>
      </td>
    </tr>
  <% } %>
</table>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
